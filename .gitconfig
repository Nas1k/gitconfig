[user]
	name = Andriy Nasinnyk
	email = andriy.nas@gmail.com
[alias]
	s = status
	b = branch
	ba = branch -a -v -v
	ci = commit
	co = checkout

	d = diff -C

	l = log --oneline
	lg = log --graph '--pretty=tformat:%Cred%h%Creset %Cgreen(%ar)%Creset %Cblue%d%Creset %s %Cred%aN%Creset %Cblue<%aE>%Creset'
	lga = log --graph '--pretty=tformat:%Cred%h%Creset %Cgreen(%ar)%Creset %Cblue%d%Creset %s %Cred%aN%Creset %Cblue<%aE>%Creset' --all
[color]
	branch = auto
	diff = auto
	status = auto
	grep = auto
	interactive = auto
[color "diff"]
	plain = normal
	meta = bold
	frag = cyan
	old = red
	new = green
	commit = yellow
	whitespace = normal red
[color "branch"]
	current = green
	local = normal
	remote = cyan
	plain = normal
[color "status"]
	header = normal
	added = blue
	updated = yellow
	changed = blue
	untracked = normal
	nobranch = red
[color "grep"]
	match = normal
[color "interactive"]
	prompt = normal
	header = normal
	help = normal
	error = normal
[merge]
	tool = meld
[core]
	editor = vim
